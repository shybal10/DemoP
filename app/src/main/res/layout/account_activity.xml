<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    android:orientation="vertical"
    tools:context="mawaqaa.parco.Activity.AccountActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/blue"
            android:gravity="center">

            <TextView
                android:id="@+id/account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textColor="@color/black"
                android:textSize="17.75sp" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:layout_width="142dp"
            android:layout_height="142dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:background="@drawable/circle">

            <android.support.v7.widget.CardView
                android:id="@+id/view2"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:shape="ring"
                android:thicknessRatio="1.8"
                app:cardCornerRadius="70dp">

                <!--fix profile image-->
                <ImageView
                    android:id="@+id/user_img"
                    android:layout_width="138dp"
                    android:layout_height="138dp"
                    android:layout_gravity="center"
                    android:src="@drawable/logo" />


            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_info_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:srcCompat="@drawable/user_info_2x" />

            <TextView
                android:id="@+id/user_info_textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/user_info"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/gray_sep_2x" />

        <LinearLayout
            android:id="@+id/my_car_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2ss"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:srcCompat="@drawable/my_cars_2x" />

            <TextView
                android:id="@+id/my_car_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/my_cars"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageViews5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/gray_sep_2x" />

        <LinearLayout
            android:id="@+id/prepaid_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViesw2ss"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:srcCompat="@drawable/prepaid_credit_2x" />

            <TextView
                android:id="@+id/prepaid_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/prepaid_credit"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView35"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/gray_sep_2x" />

        <LinearLayout
            android:id="@+id/history_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView23ss"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:srcCompat="@drawable/history_icon_2x" />

            <TextView
                android:id="@+id/history_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/history"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/gray_sep_2x" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="50dp"
            android:padding="15dp"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/pattren_2x" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="15dp"

            app:srcCompat="@drawable/pattren_2x" />
    </LinearLayout>


</LinearLayout>
