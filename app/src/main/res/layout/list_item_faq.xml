<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/gray_circle_2x" />

            <TextView
                android:textSize="16sp"
                android:id="@+id/faqQuestion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/imageView7"
                android:layout_toRightOf="@+id/imageView7"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Are Parco proces fixed ? "
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:textSize="15sp"
                android:id="@+id/faqNum"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/faqQuestion"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="1" />
        </RelativeLayout>

        <TextView
            android:textSize="15sp"
            android:id="@+id/faqAnswer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:text="Looong answer ........................" />

    </LinearLayout>

</LinearLayout>