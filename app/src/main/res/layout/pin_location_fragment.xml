<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="mawaqaa.parco.Fragment.PinLocationFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/search_location_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="@string/pin_your_loc"
            android:textAllCaps="false"
            android:textColor="#7d7d7d"
            android:textSize="15sp"
            android:textStyle="normal" />
        <View
            android:background="#7d7d7d"
            android:layout_width="1dp"
            android:layout_height="match_parent">
        </View>

        <ImageButton
            android:scaleType="fitXY"
            android:id="@+id/user_location_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/feld"
            android:padding="5dp"
            android:src="@drawable/location_btn" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:textSize="15sp"
            android:id="@+id/let_parco_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_gray"
            android:text="@string/lets_parco"
            android:textColor="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/black">
        </View>
    </LinearLayout>

</LinearLayout>
